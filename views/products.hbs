{{!< layouts/mainLayout >}}
<h2>Listado de productos</h2>

{{#if products.length}}
  <ul>
    {{#each products}}
      <li>
        <strong>ID {{id}}:</strong>
        {{name}}
        - ${{price}}
        <form
          action="/products/delete/{{id}}"
          method="POST"
          style="display:inline;"
        >
          <button type="submit">🗑️ Eliminar</button>
        </form>
      </li>
    {{/each}}
  </ul>
{{else}}
  <p>No hay productos cargados.</p>
{{/if}}